<table class="table table-striped table-condensed">

<h1>代辦清單</h1>

<% @tasks.each do |t| %>
<ul>
  <li>
    <%= t.title %>
    <%= t.due_date %>
    <%= link_to '內容', task_path(t) %>
    <%= link_to '編輯', edit_task_path(t) %>
    <%= link_to '刪除', task_path(t), method: :delete, data:{confirm: "確信刪除嗎"} %>
  </li>
</ul>
<% end %>
</table>

<%= link_to '新增事項', new_task_path %>

